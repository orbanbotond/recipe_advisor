td= link_to "Search Recipes", search_index_path, class: 'btn btn-outline-danger btn-sm'
= turbo_frame_tag 'search_results'
  - if @relevant_receipts
    div class="container"
      table class="table table-sm table-striped table-hover" size="sm"
        thead
          tr
            th Receipts
            th
              =link_to "Cook Time", search_index_path( second_relevant: second_relevant_params(@relevancy_params, :cook_time))
            th
              =link_to "Prep Time", search_index_path( second_relevant: {prep_time: :asc}.merge(second_relevant_params(@relevancy_params, :prep_time)))
            th Rating
            th Cuisine
            th Relevancy Score
            th
        tbody
          - @relevant_receipts.each do |receipt|
            = render partial: receipt
    = paginate @relevant_receipts, params: @relevancy_params
